<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7A3FB56E"
        tools:context=".MainActivity">

    <Button
            android:text="See Your Favorites"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/btnFavorites"
            android:textAllCaps="false" app:layout_constraintEnd_toEndOf="@+id/btnWantToRead"
            app:layout_constraintStart_toStartOf="@+id/btnWantToRead" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/btnWantToRead"/>
    <TextView
            android:text="My Library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/lemon" android:textSize="18dp"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="See All Books"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/btnAllBooks"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/txtName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="Currently Reading Books"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/btnCurrentlyReading"
            android:textAllCaps="false" app:layout_constraintEnd_toEndOf="@+id/btnAllBooks"
            app:layout_constraintStart_toStartOf="@+id/btnAllBooks" app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintTop_toBottomOf="@+id/btnAllBooks" android:layout_marginTop="12dp"/>
    <Button
            android:text="Already Read Books"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/btnAlreadyRead"
            android:textAllCaps="false" app:layout_constraintEnd_toEndOf="@+id/btnCurrentlyReading"
            app:layout_constraintStart_toStartOf="@+id/btnCurrentlyReading" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCurrentlyReading"/>
    <Button
            android:text="Your Wishlist"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/btnWantToRead"
            android:textAllCaps="false" app:layout_constraintEnd_toEndOf="@+id/btnAlreadyRead"
            app:layout_constraintStart_toStartOf="@+id/btnAlreadyRead" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAlreadyRead"/>
    <Button
            android:text="About"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/btnAbout"
            app:layout_constraintEnd_toEndOf="@+id/btnFavorites"
            app:layout_constraintStart_toStartOf="@+id/btnFavorites" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFavorites"/>
    <TextView
            android:text="Developped by Csokio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:elevation="30dp"
            android:src="@mipmap/handdrwanbooks"/>

</androidx.constraintlayout.widget.ConstraintLayout>